  \def\:{\CCT@@check@next}
  \global\expandafter\def\: {
    \futurelet\cct-let-token
    \cct---check-next}

  %
  % Since characters in the output of \meaning\something are of
  % catcode 12, we have to reset the catcodes of `\\, `\C, `\T,  and `\@
  %
  \catcode`\/=0
  \catcode`\C=12
  \catcode`\T=12
  \catcode`\@=12
