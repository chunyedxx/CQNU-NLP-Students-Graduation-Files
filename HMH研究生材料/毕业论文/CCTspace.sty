  /gdef/cct---check-next{
    /expandafter/cct-get-keystring
     /meaning/cct-let-token\CCT@@@/cct-space-stop
    /cct-temp}

  /long/gdef/cct-get-keystring#1\CCT@@@#2/cct-space-stop{
    /edef/cct-temp{#2}
    /ifx/cct-temp/-empty
      /def/cct-temp{ }
    /else                        % the next is a Chinese Character
      /def/cct-temp{}
    /fi}
}
 
